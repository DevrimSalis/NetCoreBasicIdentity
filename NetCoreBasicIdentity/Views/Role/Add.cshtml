@model RoleAddModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-controller="Role" asp-action="Add" method="post" class="p-5 w-75 mx-auto shadow">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Rol Adı</label>
        <input asp-for="@Model.Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Lütfen kullanıcı adını giriniz.">
        <div asp-validation-for="@Model.Name" class="form-text"></div>
    </div>
    <button type="submit" class="btn btn-primary">Rol Ekle</button>

    <div class="text-danger mt-3" asp-validation-summary="ModelOnly">
    </div>
</form>

